<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopgym64.Admin.ManageSchedulingAndResourceAllocationOversight"
            prefWidth="600.0" prefHeight="350.0">

    <!-- Title -->
    <Label text="Scheduling  Resource Oversight" layoutX="16.0" layoutY="14.0" />

    <!-- Date / Calendar -->
    <Label text="Date:" layoutX="16.0" layoutY="50.0"/>
    <DatePicker fx:id="datePicker" layoutX="60.0" layoutY="46.0"/>

    <!-- Resource Selection -->
    <Label text="Resource:" layoutX="220.0" layoutY="50.0"/>
    <ComboBox fx:id="resourceSelector" layoutX="280.0" layoutY="46.0" prefWidth="180.0"/>

    <!-- Upcoming Allocations -->
    <Label text="Allocations" layoutX="16.0" layoutY="90.0"/>
    <ListView fx:id="allocationList" layoutX="16.0" layoutY="110.0" prefWidth="400.0" prefHeight="160.0"/>

    <!-- Conflict Indicator -->
    <Label fx:id="conflictLabel" text="" layoutX="16.0" layoutY="280.0" style="-fx-text-fill: red;"/>

    <!-- Actions -->
    <Button fx:id="btnRefresh" text="Refresh" layoutX="440.0" layoutY="110.0" prefWidth="120.0"/>
    <Button fx:id="btnEdit" text="Edit Allocation" layoutX="440.0" layoutY="150.0" prefWidth="120.0"/>
    <Button fx:id="btnResolve" text="Resolve Conflict" layoutX="440.0" layoutY="190.0" prefWidth="120.0"/>

</AnchorPane>
