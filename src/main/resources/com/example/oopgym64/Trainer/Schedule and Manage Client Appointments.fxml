<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopgym64.Trainer.ScheduleAndManageClientAppointments"
            prefWidth="650.0" prefHeight="400.0">

    <!-- Title -->
    <Label text="Schedule Manage Client Appointments" layoutX="16.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- Client selection -->
    <Label text="Client:" layoutX="16.0" layoutY="50.0"/>
    <ComboBox fx:id="clientSelector" layoutX="70.0" layoutY="46.0" prefWidth="200.0"/>

    <!-- Appointment form -->
    <VBox spacing="6.0" layoutX="16.0" layoutY="90.0" prefWidth="300.0">
        <Label text="New Appointment" style="-fx-font-weight: bold;"/>
        <HBox spacing="8.0">
            <Label text="Date:"/>
            <DatePicker fx:id="datePicker"/>
        </HBox>
        <HBox spacing="8.0">
            <Label text="Time:"/>
            <TextField fx:id="timeField" promptText="HH:MM"/>
        </HBox>
        <HBox spacing="8.0">
            <Label text="Type:"/>
            <ComboBox fx:id="sessionTypeSelector" prefWidth="150.0"/>
        </HBox>
        <TextArea fx:id="notesArea" promptText="Optional notes" prefRowCount="2" wrapText="true"/>
        <Label fx:id="conflictLabel" text="" style="-fx-text-fill: red;" />
        <HBox spacing="10.0">
            <Button fx:id="btnCreate" text="Create"/>
            <Button fx:id="btnReschedule" text="Reschedule"/>
            <Button fx:id="btnCancel" text="Cancel"/>
        </HBox>
    </VBox>

    <!-- Upcoming appointments list -->
    <VBox spacing="6.0" layoutX="340.0" layoutY="90.0" prefWidth="290.0">
        <Label text="Upcoming Appointments" style="-fx-font-weight: bold;"/>
        <ListView fx:id="upcomingAppointmentsList" prefHeight="260.0"/>
        <Button fx:id="btnRefresh" text="Refresh" maxWidth="120.0"/>
    </VBox>

</AnchorPane>
