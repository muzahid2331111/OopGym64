<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.scene.layout.*?>
    <?import javafx.scene.control.*?>

    <AnchorPane xmlns:fx="http://javafx.com/fxml"
                fx:controller="controller.U7g7ApprovepurchasesController"
                prefWidth="520" prefHeight="360">
        <VBox spacing="10" alignment="CENTER" layoutX="20" layoutY="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <Label text="Approve and Monitor Equipment and Facility Purchases" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <HBox spacing="8">
            <TextField fx:id="itemDescriptionField" promptText="itemDescription" />
            <TextField fx:id="costField" promptText="cost" />
            <TextField fx:id="vendorField" promptText="vendor" />
            </HBox>
            <HBox spacing="8">
                <Button text="Validate" onAction="#validateInputs"/>
                <Button text="Process" onAction="#processData"/>
                <Button text="Verify" onAction="#verifyOrCheck"/>
            </HBox>
            <Label fx:id="statusLabel" wrapText="true"/>
        </VBox>
    </AnchorPane>