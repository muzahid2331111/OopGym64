<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopgym64.Trainer.ManageTrainerCertificationsAndContinuingEducation">

    <!-- Title -->
    <Label layoutX="14.0" layoutY="14.0" text="Certifications  Continuing Education" />

    <!-- Certifications Table -->
    <TableView fx:id="certTable" layoutX="14.0" layoutY="50.0" prefHeight="140.0" prefWidth="400.0">
        <columns>
            <TableColumn fx:id="colName" prefWidth="120.0" text="Name" />
            <TableColumn fx:id="colIssuer" prefWidth="100.0" text="Issued By" />
            <TableColumn fx:id="colExpiry" prefWidth="80.0" text="Expiry" />
            <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
        </columns>
    </TableView>

    <!-- Upload and Validate -->
    <Button fx:id="btnUpload" layoutX="14.0" layoutY="200.0" prefWidth="150.0" text="Upload Certification" />
    <Button fx:id="btnValidate" layoutX="170.0" layoutY="200.0" prefWidth="100.0" text="Validate" />

    <!-- Recommended Courses -->
    <Label layoutX="14.0" layoutY="250.0" text="Recommended Courses" />
    <ListView fx:id="recommendedCoursesList" layoutX="14.0" layoutY="275.0" prefHeight="80.0" prefWidth="250.0" />

    <!-- Course Progress -->
    <Label layoutX="300.0" layoutY="250.0" text="Course Progress" />
    <TableView fx:id="courseProgressTable" layoutX="300.0" layoutY="275.0" prefHeight="80.0" prefWidth="260.0">
        <columns>
            <TableColumn fx:id="colCourse" prefWidth="140.0" text="Course" />
            <TableColumn fx:id="colCEStatus" prefWidth="80.0" text="Status" />
        </columns>
    </TableView>

    <!-- Simple Compliance Indicator -->
    <Label layoutX="14.0" layoutY="370.0" text="Compliance:" />
    <ProgressBar fx:id="complianceProgress" layoutX="80.0" layoutY="368.0" prefWidth="200.0" />

    <!-- Buttons -->
    <Button fx:id="btnFlag" layoutX="14.0" layoutY="320.0" text="Flag Selected" />
    <Button fx:id="btnExport" layoutX="120.0" layoutY="320.0" text="Export" />
    <Button fx:id="backButtonOnClick" layoutX="510.0" layoutY="345.0" mnemonicParsing="false" text="Back" />

</AnchorPane>
