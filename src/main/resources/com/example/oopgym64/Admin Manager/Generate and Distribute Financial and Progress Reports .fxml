<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopgym64.Admin.GenerateAndDistributeFinancialAndProgressReports"
            prefWidth="500.0" prefHeight="250.0">

    <!-- Title -->
    <Label text="Generate  Send Report" layoutX="14.0" layoutY="14.0" />

    <!-- Report Type -->
    <Label text="Type:" layoutX="14.0" layoutY="50.0"/>
    <ComboBox fx:id="reportTypeSelector" layoutX="60.0" layoutY="46.0" prefWidth="150.0"/>

    <!-- Date Range -->
    <Label text="From:" layoutX="14.0" layoutY="85.0"/>
    <DatePicker fx:id="dateFrom" layoutX="60.0" layoutY="81.0" prefWidth="120.0"/>
    <Label text="To:" layoutX="200.0" layoutY="85.0"/>
    <DatePicker fx:id="dateTo" layoutX="230.0" layoutY="81.0" prefWidth="120.0"/>

    <!-- Generate -->
    <Button fx:id="btnGenerate" text="Generate" layoutX="14.0" layoutY="125.0" prefWidth="100.0"/>

    <!-- Recipient & Send -->
    <Label text="Send to:" layoutX="14.0" layoutY="165.0"/>
    <TextField fx:id="recipientEmail" promptText="email@example.com" layoutX="70.0" layoutY="161.0" prefWidth="250.0"/>
    <Button fx:id="btnSend" text="Send" layoutX="330.0" layoutY="160.0" prefWidth="100.0"/>

    <!-- Buttons -->
    <Button fx:id="btnFlag" layoutX="14.0" layoutY="320.0" text="Flag Selected" />
    <Button fx:id="btnExport" layoutX="120.0" layoutY="320.0" text="Export" />
    <Button fx:id="backButtonOnClick" layoutX="510.0" layoutY="345.0" mnemonicParsing="false" text="Back" />

</AnchorPane>
