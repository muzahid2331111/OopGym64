<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.scene.layout.*?>
    <?import javafx.scene.control.*?>

    <AnchorPane xmlns:fx="http://javafx.com/fxml"
                fx:controller="controller.U8g4HardwarenetworkController"
                prefWidth="520" prefHeight="360">
        <VBox spacing="10" alignment="CENTER" layoutX="20" layoutY="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <Label text="Manage Hardware and Network Infrastructure" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <HBox spacing="8">
            <TextField fx:id="deviceNameField" promptText="deviceName" />
            <TextField fx:id="ipAddressField" promptText="ipAddress" />
            <TextField fx:id="macAddressField" promptText="macAddress" />
            </HBox>
            <HBox spacing="8">
                <Button text="Validate" onAction="#validateInputs"/>
                <Button text="Process" onAction="#processData"/>
                <Button text="Verify" onAction="#verifyOrCheck"/>
            </HBox>
            <Label fx:id="statusLabel" wrapText="true"/>
        </VBox>
    </AnchorPane>