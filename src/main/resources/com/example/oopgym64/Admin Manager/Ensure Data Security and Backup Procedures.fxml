<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopgym64.Admin.EnsureDataSecurityAndBackupProcedures"
            prefWidth="600.0" prefHeight="320.0">

    <!-- Title -->
    <Label text="Data Security Backup" layoutX="14.0" layoutY="14.0" style="-fx-font-weight: bold;"/>

    <!-- Security Status -->
    <Label text="Security Alerts:" layoutX="14.0" layoutY="50.0"/>
    <ListView fx:id="securityAlertsList" layoutX="14.0" layoutY="70.0" prefWidth="560.0" prefHeight="100.0"/>

    <!-- Backup Status -->
    <Label text="Last Backup:" layoutX="14.0" layoutY="180.0"/>
    <Label fx:id="lastBackupLabel" text="2025-07-31 02:15" layoutX="100.0" layoutY="180.0"/>

    <Label text="Next Scheduled:" layoutX="14.0" layoutY="205.0"/>
    <Label fx:id="nextBackupLabel" text="2025-08-01 02:15" layoutX="120.0" layoutY="205.0"/>

    <!-- Actions -->
    <Button fx:id="btnRunBackup" text="Run Backup Now" layoutX="14.0" layoutY="240.0" prefWidth="140.0"/>
    <Button fx:id="btnViewPolicies" text="View Policies" layoutX="170.0" layoutY="240.0" prefWidth="140.0"/>
    <Button fx:id="btnRefresh" text="Refresh" layoutX="330.0" layoutY="240.0" prefWidth="100.0"/>

    <!-- Compliance Indicator -->
    <Label text="Compliance:" layoutX="14.0" layoutY="280.0"/>
    <ProgressBar fx:id="complianceBar" layoutX="90.0" layoutY="278.0" prefWidth="200.0"/>

</AnchorPane>
